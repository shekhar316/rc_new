<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <%- include('partials/head') %>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
</head>

<body>

<%- include('partials/navbar') %>

<div class="container">
    <br>
    <h3 class="text-center">Manage Library jobs</h3>
    <br>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
        <tr class="table-dark">
            <th>JOB</th>
            <th>ID</th>
            <th>TITLE</th>
            <th>COMPANY</th>
            <th>STATUS</th>
            <th>LINK</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        <% if(jobData.length!=0){ var i = 1; jobData.forEach(function(data){ %>
        <tr>
            <td>
                <img src="/jobImg/<%=data.identifier %>.jpg" class="bookImgThumb" alt="job-image"/>
            </td>
            <td>
                <%=data.jobID %>
            </td>
            <td>
                <a href="/job/viewbyid/<%=data.jobID %>"><%=data.Title %></a>
            </td>
            <td>
                <%=data.Company %>
            </td>
            
            <td>
                <%=data.Status %>
            </td>
            <td>
                <%=data.Link %>
            </td>
           <td>
            <a href="/admin/lib/delete/<%=data.jobID%>" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">Delete</a>
           </td>
        </tr>
        <% i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="100%">No Data Found</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>


</body>

</html>