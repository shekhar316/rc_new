<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <%- include('partials/head') %>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
</head>

<body>

<%- include('partials/navbar') %>

<div class="container">
    <br>
    <h3 class="text-center">Issue Book</h3>
    <br>
    <div class="col-md-6 mx-auto contain">
        <form action="findUser" method="post" encType="multipart/form-data">
            <br>
            <label class="form-label"><b>Enter User details</b></label>
            <br><br>
            <div class="row">
                <label class="form-label">Email of User: </label>
                <input type="email" class="form-control" name="email" placeholder="example@domain.com" required="true">
            </div>
            <br>
            <div class="row">
                <label class="form-label">Book Id for Issue:</label>
                <input type="text" class="form-control" name="bookId" value="<%=bookId%>" required="true" readonly>
            </div>
            <br>
            <p>Enter user details carefully.</p>
            <br>
            <button type="submit" class="btn btn-success">Find User</button>
        </form>
        <br>
    </div>

    <!--    FORM-->
</div>

<%- include('partials/footer') %>


</body>

</html>

