<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <%- include('partials/head') %>

</head>

<body>

<%- include('partials/navbar') %>

<div class="container">
    <br>
    <h3 class="text-center">User Profile</h3>
    <br>
    <div class="col-md-10 mx-auto contain">
        <form method="post" action="update">
            <label class="form-label"><b>Personal Details</b></label>
            <br><br>
            <div class="row">
                <div class="col">
                    <label class="form-label">First Name</label>
                    <input type="text" class="form-control" name="fname" value="<%=user.first_name%>" required="true" readonly>
                </div>
                <div class="col">
                    <label class="form-label">Last Name</label>
                    <input type="text" class="form-control" name="lname" value="<%=user.last_name%>" required="true" readonly>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col">
                    <label class="form-label">DOB</label>
                    <input type="text" class="form-control" name="dob" value="<%=user.dob%>" readonly>
                </div>
                <div class="col">
                    <div class="col">
                        <label class="form-label">Gender</label>
                        <input type="text" class="form-control" name="gender" value="<%=user.gender%>" required="true" readonly>
                    </div>
                </div>
            </div>
            <br><br>
            <label class="form-label"><b>Login Details</b></label><br><br>
            <div class="row">
                <div class="col-6">
                    <label class="form-label">Email </label>
                    <input type="email" class="form-control" name="email" value="<%=user.email%>" required="true" readonly>
                </div>
            </div>
            <br><br>
            <label class="form-label"><b>Communication Details</b></label><br><br>
            <div class="row">

                <div class="col-6">
                    <label class="form-label">Phone Number (With Country Code)</label>
                    <input type="text" class="form-control" name="phone" value="<%=user.phone%>" required="true" readonly>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col">
                    <label class="form-label">Address </label>
                    <input type="text" class="form-control" name="address" value="<%=user.address%>" required="true" >
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col">
                    <label class="form-label">City </label>
                    <input type="text" class="form-control" name="city" value="<%=user.city%>" required="true" >
                </div>
                <div class="col">
                    <label class="form-label">State </label>
                    <input type="text" class="form-control" name="state" value="<%=user.state%>" required="true" >
                </div>
                <div class="col">
                    <label class="form-label">Pin Code </label>
                    <input type="text" class="form-control" name="pin" value="<%=user.pin%>" required="true" >
                </div>
            </div>
            <br>
            <button type="submit" class="btn btn-success">Update Profile</button>
            <br>
        </form>
    </div>

    <!--    FORM-->
</div>

<%- include('partials/footer') %>


</body>

</html>

